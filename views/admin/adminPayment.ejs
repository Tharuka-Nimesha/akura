<div id="particles-js">
    <div id="overlay">
        <h2 id="topic">PAYMENTS</h2>
        <div class="wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/admin/register" method="POST">
                            <div class="panel panel-default panel-fill">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Select Student</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <div class="row">
                                            <label class="col-sm-1 control-label label">Student #</label>
                                            <div class="col-sm-4">
                                                <div class="input-group mb-3">
                                                  <input type="text" class="form-control" placeholder="Enter Student ID" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                                  <div class="input-group-append">
                                                    <button class="btn btn-primary" type="button" style="margin-bottom:0;font-size:12px;">CHECK</button>
                                                  </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-2"></div>
                                            <label class="col-sm-1 control-label label">Name</label>
                                            <div class="col-sm-4 input-group-append">
                                                <input class="form-control" type="text" name="name" placeholder="Name">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                    
                            <div id="table">
                            </div>
                                    
                            <div class="panel panel-default panel-fill">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Payment Details</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <table>
                                            <%payments.forEach(function(payment){%>
                                            <% console.log(payment.subname ) %>
                                            <tr>
                                              <td><%=payment.subname%></td>
                                              <td><%=payment.month%></td>
                                              <td><%=payment.fee%></td>
                                            </tr>
                                            <% }); %>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <center>
                              <button class="btn btn-primary" style="width:100px">SAVE</button>
                              <button class="btn btn-primary cancel" style="width:100px">CANCEL</button>
                            </center>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>       

